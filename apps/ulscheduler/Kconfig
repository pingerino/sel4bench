menuconfig APP_ULSCHEDULERBENCH
    bool "Ulscheduler benchmarks"
    depends on APP_SEL4BENCH
    default n
    select FLOG
    depends on LIB_SEL4 && HAVE_LIBC && LIB_SEL4_ALLOCMAN && LIB_UTILS && LIB_SEL4_UTILS && \
    LIB_SEL4_BENCH && LIB_ELF && LIB_SEL4_SIMPLE && LIB_SEL4_VKA && \
    LIB_SEL4_PLAT_SUPPORT && LIB_PLATSUPPORT && LIB_SEL4_BENCHSUPPORT \
    && LIB_SEL4_MUSLC_SYS
    depends on DANGEROUS_CODE_INJECTION || EXPORT_PMU_USER
    help
        Application to benchmark seL4 ulscheduler without modification to the kernel.


    config MIN_TASKS
        depends on APP_ULSCHEDULERBENCH
        int "Minimum number of tasks to benchmark"
        default 1

    config MAX_TASKS
        depends on APP_ULSCHEDULERBENCH
        int "Maximum number of tasks to benchmark"
        default 10

    config NUM_TASK_SETS
        range 1 25
        depends on APP_ULSCHEDULERBENCH
        int "Number of tasks sets to benchmark (MAX - MIN)"
        default 25

    config NUM_RUNS
        depends on APP_ULSCHEDULERBENCH
        int "Number scheduling decisions to benchmark"
        default 100

